<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/one"
    tools:context=".login">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="106dp"
      android:layout_height="88dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.166"
      app:srcCompat="@drawable/logo_no_back" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="@dimen/_233sdp"
      android:layout_height="@dimen/_127sdp"
      android:fontFamily="@font/poppins_regular"
      android:gravity="center"
      android:text="Login"
      android:textColor="@color/black"
      android:textSize="@dimen/_62sdp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.462"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.425" />

  <TextView
      android:id="@+id/txtsignIn"
      android:layout_width="@dimen/_241sdp"
      android:layout_height="@dimen/_44sdp"
      android:fontFamily="@font/poppins_regular"
      android:gravity="center"
      android:text="Sign to continue."
      android:textColor="@color/black"
      android:textSize="@dimen/_14sdp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.532" />

  <TextView
      android:id="@+id/txtEmail"
      android:layout_width="102dp"
      android:layout_height="39dp"
      android:fontFamily="@font/poppins_bold"
      android:gravity="center_vertical"
      android:text="EMAIL"
      android:textColor="@color/black"
      android:textSize="@dimen/_14sdp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.158"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.586" />

  <TextView
      android:id="@+id/txtpass"
      android:layout_width="140dp"
      android:layout_height="39dp"
      android:fontFamily="@font/poppins_bold"
      android:gravity="center_vertical"
      android:text="PASSWORD"
      android:textColor="@color/black"
      android:textSize="@dimen/_14sdp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.184"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.719" />

  <EditText
      android:id="@+id/edtUser"
      android:layout_width="340dp"
      android:layout_height="53dp"
      android:ems="10"
      android:hint="Name"
      android:inputType="textPersonName"
      android:textColor="@color/black"
      android:textSize="@dimen/_15sdp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/txtpass"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.704"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtEmail"
      app:layout_constraintVertical_bias="0.0" />

  <EditText
      android:id="@+id/edtpassreg"
      android:layout_width="345dp"
      android:layout_height="47dp"
      android:ems="10"
      android:hint="Enter Password"
      android:inputType="textPassword"
      android:textColor="@color/black"
      android:textSize="@dimen/_15sdp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.742"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtpass"
      app:layout_constraintVertical_bias="0.047" />

  <Button
      android:id="@+id/buttonreg"
      android:layout_width="@dimen/_250sdp"
      android:layout_height="@dimen/_45sdp"
      android:backgroundTint="@color/black"
      android:text="login"
      android:textSize="@dimen/_20sdp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.581"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.892" />

  <TextView
      android:id="@+id/txtlogin"
      android:layout_width="@dimen/_118sdp"
      android:layout_height="@dimen/_26sdp"
      android:gravity="center"
      android:text="Create Account"
      android:textColor="@color/black"
      android:textSize="@dimen/_13sdp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.587"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.945" />


</androidx.constraintlayout.widget.ConstraintLayout>